<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:background="@drawable/dialog_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="20sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gallery"/>
        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="Chose image from Gallery"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/darkblue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="20sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/camera"/>
        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="Chose image from Camera"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/darkblue"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_draw_canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="20sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/draw_canvas"/>
        <TextView
            android:id="@+id/tv_canvas"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="Draw item image"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/darkblue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="20sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/empty_image"/>
        <TextView
            android:id="@+id/tv_no_image"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="No mage"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            />
    </LinearLayout>

</LinearLayout>
